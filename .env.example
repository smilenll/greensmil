
# Contact email
NEXT_PUBLIC_CONTACT_EMAIL=web@greensmil.com

# Social Links
NEXT_PUBLIC_GITHUB_URL=https://github.com/smilenll
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/smilenll

# Google reCAPTCHA v3 (score-based, invisible)
# Get your keys from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_v3_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_v3_secret_key_here

# Resend Email Configuration
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Email addresses
# The verified sender email address in Resend (must be a domain you own)
RESEND_FROM_EMAIL=noreply@greensmil.com

# Email address where contact form submissions will be sent (you receive notifications here)
RESEND_TO_EMAIL=web@greensmil.com

# AWS Cognito Admin Service Credentials
# Create an IAM user with AmazonCognitoPowerUser policy attached
# Get credentials from: AWS Console → IAM → Users → Security credentials → Create access key
# Note: Cannot use AWS_ prefix on AWS Amplify (reserved), so using COGNITO_ prefix
COGNITO_ACCESS_KEY_ID=your_aws_access_key_id_here
COGNITO_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
COGNITO_REGION=us-east-2

# AWS Amplify Deployment Status (Optional - for admin dashboard)
# Get your App ID from Amplify Console URL: https://console.aws.amazon.com/amplify/home#/<APP_ID>
# The IAM user credentials above (COGNITO_*) will be used if AWS_* are not set
# Required IAM permissions: amplify:GetApp, amplify:ListJobs, amplify:GetJob
AMPLIFY_APP_ID=your_amplify_app_id_here
AMPLIFY_BRANCH_NAME=main

# Optional: Separate AWS credentials for Amplify API (if different from Cognito credentials)
# AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
# AWS_REGION=us-east-2
